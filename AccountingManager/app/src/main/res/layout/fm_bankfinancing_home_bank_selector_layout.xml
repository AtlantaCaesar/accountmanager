<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/BankFinancingHomeSelectorSearch"
        style="@style/SearchStyle"
        android:text="@string/search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorF6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/BankFinancingFundHomeSelectorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/d15"
            android:text="@string/bankfinancing_home_msg_1"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/s12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/BankFinancingHomeSelectorContentShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.accountingmanager.Sys.Widgets.GroupRecyclerView.LatterView
            android:id="@+id/BankFinancingHomeSelectorTypeShow"
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>