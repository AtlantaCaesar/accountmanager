<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.accountingmanager.Sys.Widgets.UiContentView.UiContentView
        android:layout_marginTop="@dimen/viewPaddingTop"
        android:id="@+id/lend_number"
        style="@style/UiContentStyle_input"
        app:uiContentGravity="right"
        app:uiContentHint="0"
        app:uiContentTitleText="@string/lend_msg_1" />

    <View style="@style/LineViewStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:orientation="horizontal">

        <com.accountingmanager.Sys.Widgets.UiContentView.UiContentView
            android:id="@+id/lend_name"
            style="@style/UiContentStyle_input"
            android:layout_weight="1"
            app:uiContentGravity="right"
            app:uiContentTitleText="@string/lend_msg_2" />

        <Button
            android:id="@+id/lend_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/viewMarginpadding"
            android:layout_marginRight="@dimen/viewMarginpadding"
            android:background="@mipmap/icon_home_product_arrow" />
    </LinearLayout>

    <Button
        android:id="@+id/lend_submit"
        style="@style/buttonStyle"
        android:text="@string/submit" />

</LinearLayout>