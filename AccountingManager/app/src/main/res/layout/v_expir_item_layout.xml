<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/expire_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/viewMarginpadding"
        android:layout_marginRight="@dimen/viewMarginpadding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expire_item_tvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/d10"
            android:gravity="center_vertical"
            android:textSize="@dimen/s14" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/expire_item_content_imgShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/expire_back_1" />

            <TextView
                android:id="@+id/expire_item_content_typeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d50"
                android:layout_marginTop="@dimen/d20"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/expire_item_content_typeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expire_item_content_typeName"
                android:layout_marginLeft="@dimen/d50"
                android:layout_marginTop="@dimen/d7"
                android:text="2000.00"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/s14" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>