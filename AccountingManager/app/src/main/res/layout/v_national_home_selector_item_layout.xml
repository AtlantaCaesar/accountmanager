<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/national_home_selector_item_layout"
        android:layout_width="match_parent"
        android:background="@color/whiteColor"
        android:layout_marginTop="@dimen/d1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/national_home_selector_item_name"
            style="@style/TextMsgStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国债名称" />

        <TextView
            android:id="@+id/national_home_selector_item_time"
            style="@style/TextMsgStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/national_home_selector_item_name"
            android:text="2017-5-15" />

        <TextView
            android:id="@+id/national_home_selector_item_rate"
            style="@style/TextMsgStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d20"
            android:text="4.17%" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/viewMarginpadding"
            android:src="@mipmap/icon_home_product_arrow" />
    </RelativeLayout>

</LinearLayout>