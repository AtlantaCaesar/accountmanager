<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.accountingmanager.Sys.Widgets.UiContentView.UiContentView
        android:id="@+id/netLoan_current_number"
        style="@style/UiContentStyle_input"
        android:layout_marginTop="@dimen/viewPaddingTop"
        app:uiContentGravity="right"
        app:uiContentTitleText="@string/netLoan_current_msg_1" />

    <View style="@style/LineViewStyle" />

    <com.accountingmanager.Sys.Widgets.UiContentView.UiContentView
        android:id="@+id/netLoan_current_rate"
        style="@style/UiContentStyle_input"
        app:uiContentGravity="right"
        app:uiContentTitleText="@string/netLoan_current_msg_2" />

    <Button
        android:id="@+id/netLoan_current_submit"
        style="@style/buttonStyle"
        android:text="@string/submit" />


</LinearLayout>